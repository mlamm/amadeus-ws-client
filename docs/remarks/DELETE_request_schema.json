    "recordlocator": {
      "type": "string",
      "description": "identification fpr the itinerary",
      "remarks": {
        "type": "array",
        "description": "array of remarks to add",
        "properties": {
          "name": {
            "type": "string",
            "description": "name of the remark to add"
          },
          "value": {
