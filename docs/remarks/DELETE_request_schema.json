    "authentication": {
      "type": "object",
      "description": "Credentials for calling sabre interface.",
      "properties": {
        "office-id": {
          "type": "string",
          "description": "Identification code."
        },
        "password-data": {
          "type": "string",
          "description": "Password of user id"
        },
        "user-id": {
          "type": "string",
          "description": "User id"
        }
      }
    }
  }
}

{
