{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "error": {
      "type": "object",
      "description": "Error response. '_' is for unspecific errors. For specific errors you will find the name of the context in the key.",
      "properties": {
        "_": {
          "type": "array",
          "description": "List of errors.",
          "items": {
            "type": "object",
            "description": "Error details.",
            "properties": {
              "code": {
                "type": "string",
                "description": "Service internal error code."
              },
              "message": {
                "type": "string",
                "description": "Service internal error message."
              },
              "status": {
                "type": "integer",
                "description": "HTTP status code."
              }
            }
          }
        }
      }
    }
  }
}