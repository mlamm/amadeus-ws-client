{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "airport": {
      "type": "object",
      "description": "Airport.",
      "properties": {
        "iata": {
          "type": "string",
          "description": "3 letter IATA code"
        }
      }
    },
    "carrier": {
      "type": "object",
      "description": "Carrier.",
      "properties": {
        "iata": {
          "type": "string",
          "description": "2 letter IATA code"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "result": {
      "type": "array",
      "description": "Search response with list of itineraries and their calculations.",
      "items": {
        "type": "object",
        "description": "Contains flight details and calculation of an itinerary.",
        "properties": {
          "_itinerary": {
            "type": "object",
            "description": "Provides information about flight details of the Leg(s)/segment(s).",
            "properties": {
              "legs": {
                "type": "array",
                "description": "List of leg groups. Each list displays a group of possible legs for this part of the itinerary.",
                "items": {
                  "type": "array",
                  "description": "Leg group.",
                  "items": {
                    "type": "object",
                    "properties": {
                      "carriers": {
                        "type": "object",
                        "description": "Carriers of leg.",
                        "properties": {
                          "main": {
                            "$ref": "#/definitions/carrier",
                            "description": "Main carrier is the marketing carrier with the longest share (segment duration) in the leg."
                          }
                        }
                      },
                      "classification": {
                        "type": "string",
                        "enum": [
                          "scheduled"
                        ],
                        "description": "Classification of leg."
                      },
                      "duration": {
                        "type": "integer",
                        "description": "Duration of segments and stops of this leg in seconds."
                      },
                      "nights": {
                        "type": "integer",
                        "description": "Number of nights during the leg."
                      },
                      "provider": {
                        "type": "string",
                        "enum": [
                          "sabre"
                        ],
                        "description": "Content provider of leg."
                      },
                      "segments": {
                        "type": "array",
                        "description": "List of segments.",
                        "items": {
                          "type": "object",
                          "description": "Segment details.",
                          "properties": {
                            "aircraftType": {
                              "type": "string",
                              "description": "Code of aircraft type."
                            },
                            "airports": {
                              "type": "object",
                              "description": "Airports of segment.",
                              "properties": {
                                "arrival": {
                                  "$ref": "#/definitions/airport",
                                  "description": "Airport of segment arrival."
                                },
                                "departure": {
                                  "$ref": "#/definitions/airport",
                                  "description": "Airport of segment arrival."
                                }
                              }
                            },
                            "arrive-at": {
                              "type": "integer",
                              "description": "Timestamp of arrival."
                            },
                            "baggage-rules": {
                              "type": "object",
                              "description": "Rules of free baggage allowance.",
                              "properties": {
                                "pieces": {
                                  "type": "integer",
                                  "description": "Number of allowed baggage pieces."
                                },
                                "unit": {
                                  "type": "string",
                                  "description": "Unit of allowed baggage pieces."
                                },
                                "weight": {
                                  "type": "integer",
                                  "description": "Weight of allowed baggage pieces."
                                }
                              }
                            },
                            "cabin-class": {
                              "type": "object",
                              "description": "Cabin class information.",
                              "properties": {
                                "code": {
                                  "type": "string",
                                  "enum": [
                                    "Y",
                                    "S",
                                    "J",
                                    "C",
                                    "F",
                                    "P"
                                  ],
                                  "description": "Cabin class code from content provider."
                                },
                                "name": {
                                  "type": "string",
                                  "enum": [
                                    "Economy",
                                    "Business",
                                    "First"
                                  ],
                                  "description": "Cabin class name."
                                }
                              }
                            },
                            "carriers": {
                              "type": "object",
                              "description": "Carriers of segment.",
                              "properties": {
                                "marketing": {
                                  "$ref": "#/definitions/carrier",
                                  "description": "Marketing carrier of leg."
                                },
                                "operating": {
                                  "$ref": "#/definitions/carrier",
                                  "description": "Operating carrier of leg."
                                }
                              }
                            },
                            "depart-at": {
                              "type": "integer",
                              "description": "Timestamp of departure."
                            },
                            "duration": {
                              "type": "integer",
                              "description": "Duration of segment in seconds."
                            },
                            "flight-number": {
                              "type": "integer",
                              "description": "Flight number."
                            },
                            "remaining-seats": {
                              "type": "integer",
                              "description": "Number of remaining seats."
                            },
                            "technical-stops": {
                              "type": "array",
                              "description": "List of technical stops",
                              "items": {
                                "type": "object",
                                "description": "Technical stop details.",
                                "properties": {
                                  "airport": {
                                    "$ref": "#/definitions/airport",
                                    "description": "Airport of technical stop."
                                  },
                                  "arrive-at": {
                                    "type": "integer",
                                    "description": "Timestamp of arrival."
                                  },
                                  "depart-at": {
                                    "type": "integer",
                                    "description": "Timestamp of departure."
                                  }
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              },
              "type": {
                "type": "string",
                "enum": [
                  "one-way",
                  "round-trip",
                  "open-jaw"
                ],
                "description": "Type of itinerary."
              }
            }
          },
          "_calculation": {
            "type": "object",
            "description": "Provides calculation of an itinerary",
            "properties": {
              "currency": {
                "type": "string",
                "description": "Currency of prices in the 'flight' node."
              },
              "flight": {
                "type": "object",
                "description": "Flight prices.",
                "properties": {
                  "fare": {
                    "type": "object",
                    "description": "Flight fare prices.",
                    "properties": {
                      "passenger-types": {
                        "type": "object",
                        "description": "Flight fare prices per passenger.",
                        "properties": {
                          "adult": {
                            "type": "integer",
                            "description": "Flight fare price of one adult."
                          },
                          "child": {
                            "type": "integer",
                            "description": "Flight fare price of one child."
                          },
                          "infant": {
                            "type": "integer",
                            "description": "Flight fare price of one infant."
                          }
                        }
                      },
                      "total": {
                        "type": "integer",
                        "description": "Total flight fare price of all passengers."
                      }
                    }
                  },
                  "tax": {
                    "type": "object",
                    "description": "Flight tax prices.",
                    "properties": {
                      "passenger-types": {
                        "type": "object",
                        "description": "Flight tax prices per passenger.",
                        "properties": {
                          "adult": {
                            "type": "number",
                            "description": "Flight tax price of one adult."
                          },
                          "child": {
                            "type": "number",
                            "description": "Flight tax price of one child."
                          },
                          "infant": {
                            "type": "number",
                            "description": "Flight tax price of one infant."
                          }
                        }
                      },
                      "total": {
                        "type": "number",
                        "description": "Total flight tax price of all passengers."
                      }
                    }
                  },
                  "total": {
                    "type": "number",
                    "description": "Total flight price (fare + tax) of all passengers."
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}