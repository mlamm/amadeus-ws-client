{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "result": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "_itinerary": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "enum": [
                  "one-way",
                  "round-trip",
                  "open-jaw"
                ],
                "description": "requested type of offers"
              },
              "legs": {
                "type": "array",
                "items": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "provider": {
                        "type": "string",
                        "enum": [
                          "amadeus"
                        ],
                        "description": "requested gds"
                      },
                      "classification": {
                        "type": "string",
                        "enum": [
                          "scheduled",
                          "lowcost",
                          "charter"
                        ],
                        "description": "classification of leg information"
                      },
                      "carriers": {
                        "type": "object",
                        "properties": {
                          "main": {
                            "type": "object",
                            "properties": {
                              "iata": {
                                "type": "string",
                                "description": "IATA code of the main provider"
                              }
                            }
                          }
                        },
                        "description": "carrier information"
                      },
                      "duration": {
                        "type": "number",
                        "description": "flight duration of leg in seconds"
                      },
                      "nights": {
                        "type": "number",
                        "description": "amount of nights"
                      },
                      "segments": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "aircraft-type": {
                              "type": "string",
                              "description": "type of aircraft providing the flight"
                            },
                            "airports": {
                              "type": "object",
                              "properties": {
                                "arrival": {
                                  "type": "object",
                                  "properties": {
                                    "iata": {
                                      "type": "string",
                                      "description": "IATA code of arrival airport"
                                    }
                                  }
                                },
                                "departure": {
                                  "type": "object",
                                  "properties": {
                                    "iata": {
                                      "type": "string",
                                      "description": "IATA code of departure airport"
                                    }
                                  }
                                }
                              }
                            },
                            "arrive-at": {
                              "type": "number",
                              "description": "arrival timestamp in local time"
                            },
                            "depart-at": {
                              "type": "number",
                              "description": "departure timestamp in local time"
                            },
                            "duration": {
                              "type": "number",
                              "description": "flight duration in seconds"
                            },
                            "cabin-class": {
                              "type": "object",
                              "properties": {
                                "code": {
                                  "type": "string",
                                  "enum": [
                                    "Y",
                                    "F",
                                    "C"
                                  ],
                                  "description": "code for offered cabin class"
                                },
                                "name": {
                                  "type": "string",
                                  "description": "name of offered cabin class"
                                }
                              }
                            },
                            "flight-number": {
                              "type": "number",
                              "description": "number of the offered flight"
                            },
                            "carriers": {
                              "type": "object",
                              "properties": {
                                "marketing": {
                                  "type": "object",
                                  "properties": {
                                    "iata": {
                                      "type": "string",
                                      "description": "IATA code of the marketing carrier"
                                    }
                                  }
                                },
                                "operating": {
                                  "type": "object",
                                  "properties": {
                                    "iata": {
                                      "type": "string",
                                      "description": "IATA code of the operating carrier"
                                    }
                                  }
                                }
                              }
                            },
                            "remaining-seats": {
                              "type": "number",
                              "description": "number of seats remaining for that flight"
                            },
                            "baggage-rules": {
                              "type": "object",
                              "properties": {
                                "pieces": {
                                  "type": "number",
                                  "description": "number of baggage pieces included"
                                },
                                "weight": {
                                  "type": "number",
                                  "description": "value of baggage weight"
                                },
                                "unit": {
                                  "type": "string",
                                  "description": "unit of baggage weight"
                                }
                              }
                            },
                            "gds-information": {
                              "type": "object",
                              "properties": {
                                "provider": {
                                  "type": "string"
                                },
                                "res-book-desig-code": {
                                  "type": "string",
                                  "description": "the \"reservation booking designator\" code"
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "_calculation": {
            "type": "object",
            "properties": {
              "flight": {
                "type": "object",
                "properties": {
                  "total": {
                    "type": "number",
                    "description": "total price including fare and tax for all requested passengers"
                  },
                  "fare": {
                    "type": "object",
                    "properties": {
                      "total": {
                        "type": "number",
                        "description": "total fare for all requested passengers"
                      },
                      "passenger-types": {
                        "type": "object",
                        "properties": {
                          "adult": {
                            "type": "number",
                            "description": "fare price for each adult passenger"
                          },
                          "child": {
                            "type": "number",
                            "description": "fare price for each child passenger"
                          },
                          "infant": {
                            "type": "number",
                            "description": "fare price for each infant passenger"
                          }
                        }
                      }
                    }
                  },
                  "tax": {
                    "type": "object",
                    "properties": {
                      "total": {
                        "type": "number",
                        "description": "total fare for all requested passengers"
                      },
                      "passenger-types": {
                        "type": "object",
                        "properties": {
                          "adult": {
                            "type": "number",
                            "description": "tax for each adult passenger"
                          },
                          "child": {
                            "type": "number",
                            "description": "tax for each child passenger"
                          },
                          "infant": {
                            "type": "number",
                            "description": "tax for each infant passenger"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "currency": {
                "type": "string",
                "description": "currency of the fare and tax values"
              }
            }
          }
        }
      }
    },
    "_links": {
      "type": "object",
      "properties": {
        "self": {
          "type": "object",
          "properties": {
            "href": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
